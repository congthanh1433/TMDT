@model Website.Models.Product
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layout/HomeLayout.cshtml";
}


<section class="header_text sub">
    <img class="pageBanner" src="/Content/themes/images/pageBanner.png" alt="New products">
    <h4><span>Product Detail</span></h4>
</section>
<section class="main-content">
    <div class="row">
        <div class="span9">
            <div class="row">
                <div class="span4">
                    <a href="#" class="thumbnail" data-fancybox-group="group1" title="Description 1"><img src="@Url.Content(Model.Hinh)" /></a>
                </div>
                <div class="span5">
                    <address>
                        <strong>Tên sản phẩm:</strong> <span> @Html.DisplayFor(model => model.ProductName)</span><br>
                        <strong>Nhà phát hành:</strong> <span>@Html.DisplayFor(model => model.Category.CategoryName)</span><br>
                        <strong>Option:</strong> <span>@Html.DisplayFor(model => model.Option)</span><br>
                    </address>
                    <h4><strong>Giá tiền: @Html.DisplayFor(model => model.Price)</strong></h4>
                </div>
                <div class="span5">
                    <form class="form-inline">
                        <p>&nbsp;</p>
                        <label>Qty:</label>
                        <input type="text" class="span1" placeholder="1">
                        <button class="btn btn-inverse" type="submit">Add to cart</button>
                    </form>
                </div>
            </div>
            <div class="row">
                <div class="span9">
                    <ul class="nav nav-tabs" id="myTab">
                        <li class="active"><a href="#home">Thông tin chi tiết</a></li>
                        <li class=""><a href="#profile">Additional Information</a></li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane active" id="home">@Html.DisplayFor(model => model.Mota)</div>
                        <div class="tab-pane" id="profile">
                            <table class="table table-striped shop_attributes">
                                <tbody>
                                    <tr class="">
                                        <th>Size</th>
                                        <td>Large, Medium, Small, X-Large</td>
                                    </tr>
                                    <tr class="alt">
                                        <th>Colour</th>
                                        <td>Orange, Yellow</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="span9">
                    <br>
                    <h4 class="title">
                        <span class="pull-left"><span class="text"><strong>Related</strong> Products</span></span>
                        <span class="pull-right">
                            <a class="left button" href="#myCarousel-1" data-slide="prev"></a><a class="right button" href="#myCarousel-1" data-slide="next"></a>
                        </span>
                    </h4>
                    <div id="myCarousel-1" class="carousel slide">
                        <div class="carousel-inner">
                            <div class="active item">
                                <ul class="thumbnails listing-products">
                                    @Html.Raw(ViewBag.View)
                                </ul>
                            </div>
                            <div class="item">
                                <ul class="thumbnails listing-products">
                                    @Html.Raw(ViewBag.View1)
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="span3 col">
            <div class="block">
                <ul class="nav nav-list">
                    <li class="nav-header">SUB CATEGORIES</li>
                    <li><a href="products.html">Dòng Laptop Gaming</a></li>
                    <li><a href="products.html">Dòng Laptop Văn Phòng</a></li>
                    <li><a href="products.html">Phụ kiện</a></li>
                </ul>
                <br />
                <ul class="nav nav-list below">
                    <li class="nav-header">MANUFACTURES</li>
                    <li><a href="products.html">Asus</a></li>
                    <li><a href="products.html">Dell</a></li>
                    <li><a href="products.html">MSI</a></li>
                    <li><a href="products.html">Lenovo</a></li>
                    <li><a href="products.html">Acer</a></li>
                </ul>
            </div>
            <div class="block">
                <h4 class="title">
                    <span class="pull-left"><span class="text">Randomize</span></span>
                    <span class="pull-right">
                        <a class="left button" href="#myCarousel" data-slide="prev"></a><a class="right button" href="#myCarousel" data-slide="next"></a>
                    </span>
                </h4>
                <div id="myCarousel" class="carousel slide">
                    <div class="carousel-inner">
                        <div class="active item">
                            <ul class="thumbnails listing-products">
                                <li class="span3">
                                    <div class="product-box">
                                        <span class="sale_tag"></span>
                                        <a href="product_detail.html"><img alt="" src="/Content/themes/images/Asus/1.jpg"></a><br />
                                        <a href="product_detail.html" class="title">LAPTOP GAMING ASUS TUF FX705DT-H7138T</a><br />
                                        <a href="#" class="category">GEFORCE GTX 1650 4GB RYZEN 7-3750H 8GB 512GB 17.3″ FHD IPS 120HZ</a>
                                        <p class="price">19.490.000 VND</p>
                                    </div>
                                </li>
                            </ul>
                        </div>
                        <div class="item">
                            <ul class="thumbnails listing-products">
                                <li class="span3">
                                    <div class="product-box">
                                        <a href="product_detail.html"><img alt="" src="/Content/themes/images/MSI/1.jpg"></a><br />
                                        <a href="product_detail.html" class="title">LAPTOP GAMING MSI GT83 TITAN 8RG 037VN</a><br />
                                        <a href="#" class="category">GEFORCE GTX1080 8GB SLI INTEL CORE I7 8850H 32GB 1TB 256GB 18.4” FHD IPS</a>
                                        <p class="price">59.990.000 VND</p>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="block">
                <h4 class="title"><strong>Best</strong> Seller</h4>
                <ul class="small-product">
                    <li>
                        <a href="#" title="Praesent tempor sem sodales">
                            <img src="/Content/themes/images/ladies/1.jpg" alt="Praesent tempor sem sodales">
                        </a>
                        <a href="#">Praesent tempor sem</a>
                    </li>
                    <li>
                        <a href="#" title="Luctus quam ultrices rutrum">
                            <img src="/Content/themes/images/ladies/2.jpg" alt="Luctus quam ultrices rutrum">
                        </a>
                        <a href="#">Luctus quam ultrices rutrum</a>
                    </li>
                    <li>
                        <a href="#" title="Fusce id molestie massa">
                            <img src="/Content/themes/images/ladies/3.jpg" alt="Fusce id molestie massa">
                        </a>
                        <a href="#">Fusce id molestie massa</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</section>

