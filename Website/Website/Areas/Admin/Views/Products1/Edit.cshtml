@model Website.Models.Product

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Layout/HomeLayout.cshtml";
}

<h2>Edit</h2>


@using (Html.BeginForm("Edit", "Products1", FormMethod.Post, new { @enctype = "multipart/form-data" }))
